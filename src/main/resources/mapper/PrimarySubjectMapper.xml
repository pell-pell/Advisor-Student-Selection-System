<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.selection.mapper.PrimarySubjectMapper">


    <select id="getPageList" resultType="com.selection.entity.view.PrimarySubjectView" parameterType="com.selection.entity.PrimarySubject">
        select ss.*,ps.name as collegeName from primary_subject ss
        left join college ps on ss.college_id=ps.id
        where 1=1
        <if test="obj.name!=null and obj.name!=''">
            and ss.name like concat('%',#{obj.name},'%')
        </if>
    </select>


    <insert id="insertDb" parameterType="com.selection.entity.PrimarySubject">
         insert into primary_subject(name,college_id)
         values (#{obj.name},#{obj.collegeId})
    </insert>

    <select id="getByIds" resultType="com.selection.entity.PrimarySubject" parameterType="java.lang.Integer">
        select * from primary_subject
        where id=#{id}
    </select>

    <update id="updatesDb" parameterType="com.selection.entity.PrimarySubject">
        update primary_subject
        <set>
            <if test="obj.name != null and obj.name != ''">name = #{obj.name},</if>
            <if test="obj.collegeId != null">college_id = #{obj.collegeId},</if>
        </set>
        where id = #{obj.id}
    </update>

    <delete id="deleteDb" parameterType="java.lang.Integer">
		delete from primary_subject where id = #{id}
	</delete>


</mapper>
