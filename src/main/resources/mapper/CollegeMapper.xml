<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.selection.mapper.CollegeMapper">


    <select id="getPageList" resultType="com.selection.entity.College" parameterType="com.selection.entity.College">
        select * from college
        where 1=1
        <if test="obj.name!=null and obj.name!=''">
            and name like concat('%',#{obj.name},'%')
        </if>
    </select>


    <insert id="insertDb" parameterType="com.selection.entity.College">
         insert into college(name)
         values (#{obj.name})
    </insert>

    <select id="getByIds" resultType="com.selection.entity.College" parameterType="java.lang.Integer">
        select * from college
        where id=#{id}
    </select>

    <update id="updatesDb" parameterType="com.selection.entity.College">
        update college
        <set>
            <if test="obj.name != null and obj.name != ''">name = #{obj.name},</if>
        </set>
        where id = #{obj.id}
    </update>

    <delete id="deleteDb" parameterType="java.lang.Integer">
		delete from college where id = #{id}
	</delete>


</mapper>
